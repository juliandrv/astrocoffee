---
import { Picture, inferRemoteSize } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  price: string;
  image: string;
}

const { title, description, price, image } = Astro.props;
const { width, height } = await inferRemoteSize(image);
---

<li class='flex flex-col md:flex-row lg:justify-between gap-5 w-full md:items-center p-5'>
  <div class='flex-1 flex flex-col md:flex-row gap-5 items-center'>
    <div class='w-full md:w-40 lg:w-56 overflow-hidden'>
      <a href={image} data-pswp-width={width} data-pswp-height={height}>
        <Picture
          src={image}
          alt={title}
          width={width}
          height={height}
          formats={['webp', 'avif']}
          class='border-6 border-white'
        />
      </a>
    </div>
    <div class='flex-1 space-y-3'>
      <p class='text-white font-bold text-xl text-center md:text-left leading-none'>{title}</p>
      <p class='text-coffee-400 text-lg text-center md:text-left leading-none'>{description}</p>
    </div>
  </div>
  <p class='text-4xl font-black text-white text-center md:text-left'>{price}</p>
</li>
