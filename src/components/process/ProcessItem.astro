---
import { Picture } from 'astro:assets';

interface Props {
  image: string;
  label: string;
  description: string;
  width: number;
  height: number;
}
const { image, label, description, width, height } = Astro.props;
---

<article
  class='flex flex-col md:flex-row md:items-center gap-6 md:gap-10 md:even:flex-row-reverse mt-20 md:mt-0'
>
  <div class='w-full md:w-1/2'>
    <Picture
      src={image}
      alt={`Imagen de ${label}`}
      width={width}
      height={height}
      formats={['webp', 'avif']}
    />
  </div>
  <div class='w-full md:w-1/2 md:space-y-3'>
    <h3 class='text-coffee-900 font-black text-2xl uppercase'>{label}</h3>
    <p>{description}</p>
  </div>
</article>
